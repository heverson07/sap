<mvc:View
	controllerName="sap.ui.demo.walkthrough.controller.App"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true">
	<Shell>

		<App>
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Panel headerText="{i18n>Configuração do Novo Sistema}"
								class="sapResponsiveMargin"
								width="auto">
							<content>
								<Button text="{i18n>showHelloButtonText}"
										press=".onShowHello"
										class="sapUISmallMarginEnd"/>
								<Input
									value="{/recipient/name}"
									description="criação do novo sistema {/recipient/name}"
									valueLiveUpdate="true"
									width="60%"/>
								<Text text="Voce será um cara Excelente{recipient/name}"
									class="sapUISmallMargin"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>

</mvc:View>